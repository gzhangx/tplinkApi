{
  "compilerOptions": {
    "lib": ["ES2023"],
    "incremental": true, /* Enable incremental compilation */
    "target": "es2023", /* Specify ECMAScript target version: */
    "module": "Node16", /* 'none', 'commonjs', 'amd', 'system', etc */
    "declaration": true, /* Concatenate & emit output to single file.*/
    "outDir": "out", /* Redirect output to the directory. */
    "esModuleInterop": true, /* Enables intero between CommonJS and ES */
    "skipLibCheck": true, /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently */
    "sourceMap": true
  },
  "include": [
    "src"
  ]
}